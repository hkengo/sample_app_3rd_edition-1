<% if @feed_items.any? %>
  <ol class="microposts">
    <% @feed_items.each do |feed_item| %>
      <% unless feed_item.is_replay_micropost? %>
        <%= render feed_item %>
        
        <% if feed_item.is_replayed? %>
          <% feed_item.find_replay.reverse_each do |replay_micropost| %>
            <div class="replay_micropost">
              <%= render replay_micropost %>
            </div>
          <% end %>
        <% end %>
        
      <% end %>
    <% end %>
  </ol>
  <%= will_paginate @feed_items %>
<% end %>
