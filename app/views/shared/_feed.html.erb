<% if @feed_items.any? %>
  <ol class="microposts">
    
    <% @feed_items.each do |feed_item| %>
      <% unless feed_item.is_reply? %>
        <%= render feed_item %>
        
        <% if feed_item.reply_present? %>
          <% feed_item.replies.reverse_each do |reply_micropost| %>
            <div class="reply_micropost"><%= render reply_micropost %></div>
          <% end %>
        <% end %>
        
      <% end %>
    <% end %>
  </ol>
  <%= will_paginate @feed_items %>
<% end %>